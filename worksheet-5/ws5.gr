
:- assert_clauses(n(add,3),[
 clause([n(add,3),[n(0,0)],$(y),$(y)],
  [&],
  [y]/0),
 clause([n(add,3),[n(s,1),$(x)],$(y),[n(s,1),$(z)]],
  [n(add,3),$(x),$(y),$(z)],
  [x,y,z]/0)
]).

:- assert_clauses(n(nat,1),[
 clause([n(nat,1),[n(0,0)]],
  [&],
  []/0),
 clause([n(nat,1),[n(s,1),$(x)]],
  [n(nat,1),$(x)],
  [x]/0)
]).
